{
  "name": "node-reverse-proxy",
  "version": "1.0.0",
  "description": "A simple reverse proxy server built with Node.js",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "examples": "node examples/test-services/service1.js & node examples/test-services/service2.js & node examples/test-services/service3.js",
    "build:ui": "webpack --mode production",
    "dev:ui": "webpack serve --mode development",
    "watch:ui": "webpack --watch --mode development"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testTimeout": 10000
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "dotenv": "^16.0.3",
    "ee-first": "^1.1.1",
    "express": "^4.21.1",
    "http-proxy-middleware": "^2.0.7",
    "lucide-react": "^0.292.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "on-finished": "^2.4.1",
    "prom-client": "^15.1.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.4",
    "style-loader": "^3.3.3",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
